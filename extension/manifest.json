{
  "manifest_version": 3,
  "name": "CourseCompass",
  "version": "0.1.0",
  "description": "Adds quick course/professor analysis to Hoos' List for UVA students.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "CourseCompass"
  },
  "homepage_url": "https://github.com/AryanThodupunuri/coursecompass",
  "permissions": [],
  "host_permissions": [
    "https://hooslist.virginia.edu/*",
    "https://sis.virginia.edu/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://hooslist.virginia.edu/*",
        "https://sis.virginia.edu/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
